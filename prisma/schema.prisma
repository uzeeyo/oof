generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Posts {
  postID     Int       @id(map: "posts_pkey") @default(autoincrement())
  userID     Int
  text       String?
  imageUrl   String?
  videoUrl   String?
  likes      Int       @default(0)
  views      Int       @default(0)
  createdAt  DateTime  @db.Date
  archivedAt DateTime? @db.Date
  Users      Users     @relation(fields: [userID], references: [userID], onDelete: NoAction, onUpdate: NoAction, map: "fk_posts_users")
}

model Users {
  userID       Int       @id(map: "users_pkey") @default(autoincrement())
  email        String
  password     String
  createdAt    DateTime  @db.Date
  archivedAt   DateTime? @db.Date
  lastLogin    DateTime  @db.Date
  failedLogins Int       @default(0)
  Posts        Posts[]
}
